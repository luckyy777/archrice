# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

### screenshots ###

# regular screenshot
Print
	scrot ~/pictures/screenshots/screenshot.png

# screenshot to clipboard
shift + Print
	scrot -e 'xclip -selection clipboard -t image/png -i $f' ~/.cache/screenshots/screenshot.png

# window screenshot to clipboard
alt + Print
	scrot -ube 'xclip -selection clipboard -t image/png -i $f' ~/.cache/screenshots/screenshot.png

# select screenshot to clipboard
super + Print
	scrot --select --freeze -e 'xclip -selection clipboard -t image/png -i $f' ~/.cache/screenshots/screenshot.png

### volume controls ###

# increase volume
XF86AudioRaiseVolume
	pamixer -i 5

# decrease volume
XF86AudioLowerVolume
	pamixer -d 5

# mute volume 
XF86AudioMute
	pamixer -t


### media keys ###

# play/pause
super + F1
	playerctl --player=mpd play-pause

# previous
super + F2
	playerctl --player=mpd previous

# next
super + F3
	playerctl --player=mpd next

# stop
super + F4
	playerctl --player=mpd stop

### opening shit ###

# alacritty
super + Return
	alacritty

# file manager
super + e
	thunar

# firefox
super + b
	librewolf

# discord
super + c
	discord

# steam
super + g
	steam

# multimc
super + shift + g
	multimc

# ncmpcpp
super + p
	alacritty -o "window.dimensions.columns=150" "window.dimensions.lines=50" -e ncmpcpp

# teams
super + shift + c
	teams

# pavucontrol
super + ctrl + p
	pavucontrol
